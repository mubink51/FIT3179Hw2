{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": {
    "text": "Comparison of Income and Population across US states 2018",
    "fontSize": 30
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mubink51/FIT3179Hw2/main/final.csv"
  },
  "params": [
    {
      "name": "party_selection",
      "bind": {
        "input": "select",
        "options": [null, "Republicans", "Democrats"],
        "labels": ["Show All"],
        "name": "Party selection"
      }
    },
    {
      "name": "population_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 35000000,
        "step": 100000,
        "name": "Minimum Population"
      }
    },
    {
      "name": "average_age_param",
      "value": 30,
      "bind": {
        "input": "range",
        "min": 30,
        "max": 42,
        "name": "Minimum Avg Age"
      }
    }
  ],
  "transform": [
    {
      "filter": "party_selection == null || datum.Winning_Party == party_selection"
    },
    {"filter": "datum.population > population_above"},
    {"filter": "datum.Average_Age > average_age_param"},
    {"calculate": "datum.Average_Income-30000", "as": "avg_income"}
  ],
  "mark": "circle",
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend",
          "on": "mouseover"
        }
      },
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "population",
          "type": "quantitative",
          "title": "Population",
          "axis": {"tickCount": 3, "titleFontSize": 20},
          "scale": {"type": "log", "domain": [500000, 50000000]}
        },
        "y": {
          "field": "avg_income",
          "type": "quantitative",
          "title": "Average Income above mean",
          "axis": {"tickCount": 4, "titleFontSize": 20},
          "scale": {"type": "linear", "domain": [-15000, 15000]}
        },
        "tooltip": [
          {"field": "state", "title": "State"},
          {"field": "Average_Age", "title": "Average Age", "format": ".2f"},
          {
            "field": "Average_Income",
            "title": "Average Income",
            "format": "$00,.0f"
          }
        ],
        "size": {
          "field": "Average_Age",
          "scale": {
            "type": "threshold",
            "domain": [33, 35, 37, 39],
            "range": [100, 300, 600, 1000, 2000]
          }
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": ["North East", "South", "Mid West", "West"],
            "range": ["#decbe4", "#1f78b4", "#fbb4ae", "#33a02c"]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.7},
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0
      },
      "encoding": {
        "x": {
          "field": "population",
          "type": "quantitative",
          "title": "Population",
          "axis": {"tickCount": 3},
          "scale": {"type": "log", "domain": [500000, 50000000]}
        },
        "y": {
          "field": "avg_income",
          "type": "quantitative",
          "title": "Average Income above mean",
          "axis": {"tickCount": 4},
          "scale": {"type": "linear", "domain": [-15000, 15000]}
        },
        "text": {"field": "state_abr"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.8},
          "value": 0
        }
      }
    }
  ],
  "config": {}
}